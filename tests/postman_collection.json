		{
			"name": "15. Search Log (Admin)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Wait 5 seconds for indexing",
							"const date = Date.now();",
							"let currentDate = null;",
							"do {",
							"    currentDate = Date.now();",
							"} while (currentDate - date < 5000);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Log Found\", function () {",
							"    var uuid = pm.collectionVariables.get(\"unique_id\");",
							"    pm.expect(pm.response.text()).to.include(uuid);",
							"    pm.expect(pm.response.text()).to.not.include(\"No logs found matching your criteria\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
